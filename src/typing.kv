#:kivy 2.2.1

<Keyboard>:
    BoxLayout:
        orientation: "vertical"
        size: root.size
        pos: root.pos
        canvas.before:
            Color:
                rgba: 0.07, 0.5, 0.3, 1
            Rectangle:
                pos: self.pos
                size: self.size

        AnchorLayout:
            anchor_x: "center"
            anchor_y: "center"

            BoxLayout:
                orientation: "vertical"
                size_hint: 0.6, 0.6
                Label:
                    text: root.input_text
                    # テキストをLabelのやや左寄せにする
                    text_size: self.size[0] / 2, self.size[1]
                    halign: "left"
                    valign: "bottom"
                    font_size: 20
                Label:
                    text: "_ _ _ _ _ _ _ _ _ _ _ _ _ _ _"
                    text_size: self.size[0] / 2, self.size[1]
                    halign: "left"
                    valign: "top"
                    # アンダーバーとテキストの位置を合わせるため
                    font_size: 23.5

        BoxLayout:
            orientation: "horizontal"
            Button:
                text: "a"