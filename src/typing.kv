#:kivy 2.2.1

<Background>:
    Image:
        source: "img/background.jpg"
        pos: root.pos
        size: root.size

<MainLayout>:
    BoxLayout:
        orientation: "vertical"
        size: root.size
        pos: root.pos
        canvas.before:
            Color:
                rgba: 1, 1, 0.3, 1
            Rectangle:
                pos: self.pos
                size: self.size

        AnchorLayout:
            anchor_x: "center"
            anchor_y: "center"

            BoxLayout:
                orientation: "vertical"
                size_hint: 0.6, 0.6

                Button:
                    id: question
                    text: "hello"
                    size_hint_y: 2
                    font_size: 40
                Button:
                    text: root.shown_text
                    font_size: 30

        FloatLayout:
            Background:
                id: bg1
                pos: -self.width / 6, 0
            Background:
                id: bg2
                pos: self.width / 2.1, 0
            Background:
                id: bg3
                pos: self.width, 0
            Label:
                font_size: 30
                pos_hint: {"x": -0.45, "y": 0.4}
                text: str(int(root.limit_timer))
            
            Image:
                source: "img/hashiru_boy.png"
                size_hint: None, None
                size: self.texture_size[0] * 0.2, self.texture_size[1] * 0.2
                pos_hint: {"x": .38, "y": .2}