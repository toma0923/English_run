#:kivy 2.2.1

<MainLayout>:
    BoxLayout:
        orientation: "vertical"
        size: root.size
        pos: root.pos
        canvas.before:
            Color:
                rgba: 0.07, 0.5, 0.3, 1
            Rectangle:
                pos: self.pos
                size: self.size

        AnchorLayout:
            anchor_x: "center"
            anchor_y: "center"

            BoxLayout:
                orientation: "vertical"
                size_hint: 0.6, 0.6

                line: under_line
                Button:
                    id: question
                    text: "hello"
                    size_hint_y: 2
                    font_size: 40
                Button:
                    id: displayed_text
                    text: root.input_text
                    # テキストをLabelのやや左寄せにする
                    text_size: None, self.size[1]
                    halign: "left"
                    valign: "bottom"
                    font_size: 22
                Button:
                    id: under_line
                    text_size: len(text) * 15, self.size[1] * 2
                    halign: "center"
                    valign: "top"
                    # アンダーバーとテキストの位置を合わせるため
                    font_size: 23.5

        BoxLayout:
            orientation: "horizontal"
            Button:
                text: "a"