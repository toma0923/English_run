#:kivy 2.2.1

<MainLayout>:
    BoxLayout:
        orientation: "vertical"
        size: root.size
        pos: root.pos
        canvas.before:
            Color:
                rgba: 1, 1, 0.3, 1
            Rectangle:
                pos: self.pos
                size: self.size

        AnchorLayout:
            anchor_x: "center"
            anchor_y: "center"

            BoxLayout:
                orientation: "vertical"
                size_hint: 0.6, 0.6

                Button:
                    id: question
                    text: "hello"
                    size_hint_y: 2
                    font_size: 40
                Button:
                    text: root.shown_text
                    font_size: 30

        FloatLayout:
            Image:
                canvas:
                    Rectangle:
                        source: "img/background.jpg"
                        size: self.size
            
            Image:
                source: "img/hashiru_boy.png"
                size_hint: None, None
                size: self.texture_size[0] * 0.2, self.texture_size[1] * 0.2
                pos_hint: {"x": .38, "y": .2}