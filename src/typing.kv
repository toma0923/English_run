#:kivy 2.2.1
#:import SlideTransition kivy.uix.screenmanager.SlideTransition

ScreenManagement:
    MenuScreen:
    ForCheckScreen:
    MainLayout:
    ResultScreen:


<MenuScreen>:
    name: "menu"
    input: input_box
    canvas.before:
        Color:
            rgba: 0.0, 0.1, 0.2, 1
        Rectangle:
            size: self.size
            pos: self.pos

    TextInput:
        id: input_box
        hint_text: "英単語の出題数を入力してください。(デフォルトは30問)"
        input_type: "number"
        input_filter: "int"
        halign: "center"
        size_hint: 0.3, 0.07
        pos_hint: {"center_x": 0.5, "center_y": 0.6}
    Button:
        font_size: 30
        text: "start"
        size_hint: 0.4, 0.15
        pos_hint: {"center_x": 0.5, "center_y": 0.4}
        on_release:
            root.on_press_start()


<ForCheckScreen>:
    name: "check"
    scroll: scroll
    canvas.before:
        Color:
            rgba: 0.0, 0.1, 0.2, 1
        Rectangle:
            size: self.size
            pos: self.pos

    BoxLayout:
        orientation: "vertical"
        Button:
            text: "start"
            on_release:
                root.on_press_start()
            
        ScrollView:
            size_hint_y: 8
            GridLayout:
                id: scroll
                cols:2
                size_hint_y: None
                row_default_height: 100
                height: self.minimum_height
                spacing: 1, 20
                padding: 30


<ResultScreen>:
    name: "result"
    canvas.before:
        Color:
            rgba: 0.0, 0.1, 0.2, 1
        Rectangle:
            size: self.size
            pos: self.pos

    Label:
        font_size: 40
        text: "スコア: " + str(root.score)
        pos_hint: {"center_x": 0.5, "center_y": 0.7}
    Label:
        font_size: 40
        text: "ハイスコア: " + str(root.high_score)
        pos_hint: {"center_x": 0.5, "center_y": 0.6}
    
    Button:
        text: "リトライ"
        size_hint: 0.4, 0.15
        pos_hint: {"center_x": 0.5, "center_y": 0.45}
        on_release:
            root.on_retry()


<ScrollLabel>:
    canvas.before:
        Color:
            rgba: root.bg_color
        Rectangle:
            size: self.size
            pos: self.pos


<Background>:
    Image:
        source: "img/background.jpg"
        pos: root.pos
        size: root.size

<MainLayout>:
    name: "main"
    BoxLayout:
        orientation: "vertical"
        size: root.size
        pos: root.pos
        canvas.before:
            Color:
                rgba: 1, 1, 0.3, 1
            Rectangle:
                pos: self.pos
                size: self.size

        AnchorLayout:
            anchor_x: "center"
            anchor_y: "center"

            BoxLayout:
                orientation: "vertical"
                size_hint: 0.6, 0.6

                Button:
                    id: question
                    text: "hello"
                    size_hint_y: 2
                    font_size: 40
                Button:
                    text: root.shown_text
                    font_size: 30

        FloatLayout:
            Background:
                id: bg1
                pos: -self.width / 6, 0
            Background:
                id: bg2
                pos: self.width / 2.1, 0
            Background:
                id: bg3
                pos: self.width, 0
            Label:
                font_size: 30
                text_size: self.size
                halign: "left"
                color: 0, 0, 0, 1
                pos_hint: {"x": 0, "y": 0.9}
                text: "timer: " + str(int(root.limit_timer))
            Label:
                font_size: 30
                text_size: self.size
                halign: "left"
                color: 0, 0, 0, 1
                pos_hint: {"x": 0, "y": 0.8}
                text: "score: " + str(int(root.score))
            Label:
                font_size: 25
                text_size: self.size
                halign: "left"
                color: 0, 0, 0, 1
                pos_hint: {"x": 0, "y": 0.7}
                text: "時速" + str(int(root.speed * 10)) + "km"
            Button:
                background_color: 0, 0.4, 0.7, 0.9
                pos_hint: {"x": 0.88, "y": 0.86}
                size_hint: 0.1, 0.1
                text: "Menu" 
                on_release:
                    root.on_press_menu()
            
            Image:
                source: "img/hashiru_boy.png"
                size_hint: None, None
                size: self.texture_size[0] * 0.2, self.texture_size[1] * 0.2
                pos_hint: {"x": .38, "y": .2}